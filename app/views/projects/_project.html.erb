<div>
  <% if user_signed_in? %>
    <p class="btn tertiary">
      <%= link_to 'Novo Projeto', new_project_path %>
    </p>
  <% end %>
</div>
<section id="projects">
  <% @projects.each do |project| %>
    <div class="box project five columns">
      <%= link_to project do %>
        <header>
          <div>
            <%= image_tag(project.image_url.thumb.url) if project.image_url %>
          </div>
          <strong class="project-title"><%= project.name %></strong>
          <span class="project-owner">by <%=project.owner%></span>
        </header>
        <article>
          <span class="wrap-span">
            <%= project.description %>
          </span>
          <div class="project_location">
            <i class="icons location"></i>
            <span>
              <%= project.location %>
            </span>
          </div>
          <div class="info_bar box-inset" style="clear:both;float:left">
            <div class="status_bar">
              <div class="progress" style="width:#{project.status_progress}"></div>
            </div>
            <section class="more">
              <div class="box left">
                <span>financiado</span>
              </div>
              <div class="box left">
                <span>arrecadado</span>
              </div>
              <div class="box left">
                <span>para acabar</span>
              </div>
            </section>
          </div>
          <div id="buttons">
            <% if user_signed_in? && project.user_id == current_user.id %>
              <p class="btn small">
                <%= link_to 'Ver', project %>
              </p>
              <p class="btn small">
                <%= link_to 'Editar', edit_project_path(project) %>
              </p>
              <p class="btn small">
                <%= link_to 'Apagar', project, method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  <% end %>
</section>