<div>
  <% if user_signed_in? %>
    <p class="btn tertiary">
      <%= link_to 'Novo Projeto', new_project_path %>
    </p>
  <% end %>
</div>
<section id="projects">
  <% @projects.each do |project| %>
    <div class="box project four columns">
      <header>
        <div>
          <%= image_tag(project.image_url.thumb.url) if project.image_url %>
        </div>
        <h4><%= project.name %></h4>
      </header>
      <article>
        <label><strong>Categoria:</strong></label>
        <span><%= project.category %></span><br>
        <label><strong>Headline:</strong></label>
        <span><%= project.headline %></span><br>
        <label><strong>Descrição:</strong></label>
        <span><%= project.decription %></span><br>
        <label><strong>Objetivo:</strong></label>
        <span><%= project.price %></span><br>
        <div class="info_bar">
          <div class="status_bar">
            <div class="progress" style="width:#{project.status_progress}"></div>
          </div>
          <section class="icons">
            <%= link_to project.soundcloud_url do %>
              <div class="soundcloud"></div>
            <% end %>
          </section>
        </div>
        <div id="buttons">
          <% if user_signed_in? && project.user_id == current_user.id %>
            <p class="btn small">
              <%= link_to 'Mostrar', project %>
            </p>
            <p class="btn small">
              <%= link_to 'Editar', edit_project_path(project) %>
            </p>
            <p class="btn small">
              <%= link_to 'Deletar', project, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</section>