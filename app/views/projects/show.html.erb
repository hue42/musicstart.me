<p id="notice"><%= notice %></p>
<section class="row box">
  <section class="eleven columns">
    <header>
      <div>
        <%= image_tag(@project.image_url) if @project.image_url %>
      </div>
      <h4><%= @project.name %></h4>
    </header>

    <p>
      <b>Category:</b>
      <%= @project.category %>
    </p>

    <p>
      <b>Headline:</b>
      <%= @project.headline %>
    </p>

    <p>
      <b>Decription:</b>
      <%= @project.decription %>
    </p>

    <p>
      <b>Soundcloud url:</b>
      <%= @project.soundcloud_url %>
    </p>

    <p>
      <b>User:</b>
      <%= @project.owner %>
    </p>

    <p>
      <b>Price:</b>
      <%= @project.price %>
    </p>
  </section>
  <aside class="five columns box-inset">
    <div>
      <span class="icons heart"></span>
    </div>
    <div>
      <button class="btn primary">Apoiar Esse Projeto</button>
    </div>
    <div class="projects-rewards">
      <%= @rewards.each do |reward| %>
        <header>
          <strong>
            Apoiar com <%= number_to_currency(reward.minimum_value)%> ou mais:
          </strong>
        </header>
        <article>
          <%= reward.description %>
        </article>
      <% end %>
    </div>
  </aside>
</section>
