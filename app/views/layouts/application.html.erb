<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>\m/ MusicStart \m/</title>
    <meta name="description" content="">

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">

    <%= javascript_include_tag 'modernizr-2.5.3.min.js' %>

    <%= stylesheet_link_tag "application", :media => "all"  %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="wrapper">
      <div class="row">
        <!-- header -->
          <header id="header">
            <!-- logo -->
            <strong class="logo">
              <a href="/">
                <img class="logo-desktop" src="/assets/logo.png" alt="musicstart.me">
                <img class="logo-mobile" src="/assets/logo-mobile.png" alt="musicstart.me">
              </a>
            </strong>
            <!-- slogan -->
            <strong class="slogan">crowd your music</strong>
            <!-- blockquote-box -->
            <div class="blockquote-box">

            </div>
          </header>
          <!-- panel -->
          <div class="panel">
            <a class="opener" href="#"><span>Menu</span></a>
            <!-- nav-holder -->
            <div class="nav-holder">
              <!-- nav -->
              <nav id="nav">
                <strong class="logo-panel"><a href="index.html"><img src="/assets/logo-panel.png" alt="musicstart.me"></a></strong>
                <ul>
                  <li class="active"><a class="home" href="index.html">HOME</a></li>
                  <li><a href="/explorar">EXPLORAR</a></li>
                  <li><a href="/enviar">ENVIAR</a></li>
                  <% if user_signed_in? %>
                    <li><a href="#"><%= current_user.email %></a>
                      <div class="dropdown">
                        <ul>
                          <li><a href="/users/<%=current_user.id%>">Perfil</a></li>
                          <li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
                        </ul>
                      </div>
                    </li>
                  <% else %>
                    <li><%= link_to "Cadastre-se", new_user_registration_path %></li>
                  <% end %>
                </ul>
              </nav>
              <!-- social-networks -->
              <ul class="social-networks">
                <li><a class="facebook" href="#">Facebook</a></li>
                <li><a class="twitter" href="#">Twitter</a></li>
              </ul>
            </div>
          </div>

        <div>
          <% flash.each do |name, msg| %>
            <div class="alert">
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            </div>
          <% end %>
        </div>

        <%= yield %>

      </div>

      <div class="row">
        <%= render "layouts/footer" %>
      </div>
    </div>
  </body>
</html>