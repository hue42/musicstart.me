<section class="user_admin_controls">
  <p class="btn oval small tertiary">
    <%= link_to 'Novo Projeto', new_project_path %>
  </p>
  <p class="btn oval small tertiary">
    <%= link_to "Editar Perfil", edit_user_path %>
  </p>
</section>
<section class="user_main_infos five columns">
  <div>
    <%= image_tag avatar_url(@user) %>
  </div>
  <div>
    <h4><%= @user.name %></h4>
  </div>
  <div>
    <%= @user.email %>
  </div>
  <div>
    <i class="icons location"></i>
    <span><%= @user.location %></span>
  </div>
  <div>
    <h4>Badges</h4>
    <article class="badges">
      <% @user.badges.each do |badge| %>
        <%= badge.name %>
      <% end %>
    </article>
  </div>
  <div>
    <h4>Pontos</h4>
    <article class="points">
      <%= @user.points.last.value %>
    </article>
  </div>
</section>
<section class="ten columns">
  <header>
    <h4>Meus Projetos</h4>
  </header>
  <article class="field">
    <% @projects.each do |project| %>
      <div class="box-inset">
        <span><%= project.name %></span>
        <i class="icons location"></i>
        <span><%= project.total_backers %></span>
      </div>
    <% end %>
  </article>
</section>
<section class="ten columns">
  <header>
    <h4>Projetos Apoiados</h4>
  </header>
  <article class="field">
    <% @backers.each do |backer| %>
      <% projeto = Project.find(backer.project_id) %>
      <div class="box-inset">
        <span><%= projeto.name %></span>
        <i class="icons location"></i>
        <span><%= projeto.total_backers %></span>
      </div>
    <% end %>
  </article>
</section>