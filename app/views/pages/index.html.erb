<!-- banner -->
<section class="banner slider">
  <div class="sliderContent">
    <% @projects_in_home.each do |project| %>
    <div class="featured-inner">
      <%=link_to project do %>
        <article class="left banner-container featured-inner">
          <%= image_tag(project.image_url.thumb.url) if project.image_url %>
        </article>
        <aside class="right banner-aside featured-meta">
          <strong><%= project.headline %></strong>
        </aside>
      <% end %>
    </div>
    <% end %>
  </div>
</section>
<!-- fim banner -->

<!-- trends(principais aparições) -->
