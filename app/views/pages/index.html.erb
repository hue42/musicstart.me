<!-- gallery -->
<div class="gallery responsive">
  <div class="mask">
    <ul class="slideset">
      <% @projects_in_home.each do |project| %>
        <li class="slide" data-transition="slidedown" data-slotamount="10" data-masterspeed="300" data-thumb="/assets/img-1-small.jpg">
          <%= image_tag(project.image_url.thumb.url) if project.image_url %>
          <div class="caption text-box lfl lfl" data-x="-91" data-y="140" data-speed="300" data-start="800" data-easing="easeOutExpo">
            <h1><span><%= project.headline %></span></h1>
            <a class="more" href="articles.html">READ MORE</a>
            <div style="" class="tp-leftarrow tparrows default"></div>
            <div style="" class="tp-rightarrow tparrows default"></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<!-- fim banner -->

<!-- trends(principais aparições) -->
<div class="container_content">
  <!-- widget-blocks -->
  <div class="widget-blocks">
    <!-- block -->
    <div class="block">
      <div class="holder">
        <!-- title-box -->
        <header class="title-box">
          <h2>Selecionados</h2>
        </header>
        <div class="album-box player-holder">
          <%= render 'destaques'%>
        </div>
      </div>
    </div>
    <div class="block">
      <div class="holder">
        <!-- title-box -->
        <header class="title-box">
          <h2>Acabando</h2>
        </header>
        <div class="album-box player-holder">
          <%= render 'projetos_novos' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- section -->
  <section class="section">
    <!-- heading -->
    <header class="heading">
      <h1>NOVOS</h1>
      <a class="link" href="articles-home.html">Todos</a>
    </header>
    <!-- carousel responsive1 -->
    <div class="carousel responsive1">
      <div class="mask">
        <!-- slideset -->
        <div class="slideset">
          <% @projetos_novos.each do |project| %>
            <!-- slide -->
            <div class="slide">
              <a href="articles.html">
                <%= image_tag(project.image_url.thumb.url) if project.image_url %>
                <div class="text">
                  <h2><%= project.name %></h2>
                  <time class="date" datetime="2012-05-27">MAY 27TH, 2012</time>
                  <span class="more">More</span>
                </div>
              </a>
            </div>
            <!-- slide -->
          <% end %>
        </div>
      </div>
      <a class="btn-prev" href="#">Previous</a>
      <a class="btn-next" href="#">Next</a>
    </div>
  </section>
  <!-- section -->
</section>

