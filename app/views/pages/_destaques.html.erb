<% @projects_in_home.each do |project| %>
  <div class="info-box">
    <%= link_to "projects/#{project.id}" do%>
      <header>
          <div>
            <%= image_tag(project.image_url.thumb.url) if project.image_url %>
          </div>
          <h5 class="project-title"><%= project.name %></h5>
          <span class="project-owner">by <%=project.owner%></span>
        </header>
        <article>
          <span class="wrap-span">
            <%= project.description %>
          </span>
          <div class="project_location">
            <i class="icons location"></i>
            <span>
              <%= project.location %>
            </span>
          </div>
          <div class="info_bar box-inset" style="clear:both;float:left">
            <div class="status_bar">
              <div class="progress" style="width:<%=project.status_progress%>"></div>
            </div>
            <section class="more">
              <div class="box left">
                <h4><%= project.status_progress %></h4>
                <span>financiado</span>
              </div>
              <div class="box left">
                <h4><%= project.total_pleged.to_i %></h4>
                <span>arrecadado</span>
              </div>
              <div class="box left">
                <span>para acabar</span>
              </div>
            </section>
          </div>
        </article>
    <% end %>
  </div>
<% end %>